<h1>Add a Podcast Here!</h1>
{{!-- make a POST HTTP request to the endpoint of "/podcasts" in the router --}}
<form method="POST" action="/podcasts">
  <label for="title">Title
    <input type="text" id="title" name="title" />
  </label>
  
  <label for="description">Description
    <input type="text" id="description" name="description" />
  </label>

  <label for="network">Network
    <input type="text" id="network" name="network" />
  </label>

  <input type="submit" />
</form>

<a href="/podcasts">Podcasts Home Page</a>